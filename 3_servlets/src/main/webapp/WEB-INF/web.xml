<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">




    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>ru.bgbrakhi.servlets.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>



    <servlet>
        <servlet-name>Signin</servlet-name>
        <servlet-class>ru.bgbrakhi.servlets.servletsjsp.SigninController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UsersServlet </servlet-name>
        <servlet-class>ru.bgbrakhi.servlets.servletsjsp.UsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>HttpExample</servlet-name>
        <servlet-class>ru.bgbrakhi.servlets.http.HttpExServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HttpExample</servlet-name>
        <url-pattern>/http</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>UserCreateServlet</servlet-name>
        <servlet-class>ru.bgbrakhi.servlets.servletsjsp.UserCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserCreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserUpdateServlet</servlet-name>
        <servlet-class>ru.bgbrakhi.servlets.servletsjsp.UserUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserUpdateServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>JSONController</servlet-name>
        <servlet-class>ru.bgbrakhi.servlets.servlets.JSONController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JSONController</servlet-name>
        <url-pattern>/json</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ru.bgbrakhi.servlets.servletsjsp.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>